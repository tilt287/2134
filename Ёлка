#include <iostream>
using namespace std;

int main() {
    setlocale(0, "");
    cout << " *     \033[32m    *           \033[m  *" << endl;
    cout << " \033[32m         ***                          " << endl;
    cout << " \033[32m        *****         \033[m *           " << endl;
    cout << "    *  \033[32m *******                    \033[m  * " << endl;
    cout << " *  \033[32m   *********    \033[m*                       " << endl;
    cout << "\033[32m      ***********           \033[m*        " << endl;
    cout << "      \033[6m     |" << endl;


    return 0;
}
